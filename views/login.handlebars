{{> header }}
<div class="container">

    <h1>{{title}}</h1>
    <p>Log in to access your account</p>

    {{!-- <form method="POST" id="sign-in" action="/login"> --}}
    <form id="sign-in">
        <div class="form-group">
            <label for="usernameL">Username</label>
            <input type="text" class="form-control" id="usernameL" placeholder="Enter your username">
        </div>
        <div class="form-group">
            <label for="passwordL">Password</label>
            <input type="password" class="form-control" id="passwordL" placeholder="Enter password">
        </div>
        <button type="submit" id="loginUser" class="btn btn-primary">Submit</button>
    </form>
</div>

